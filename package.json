{
  "name": "@dotmh/ts-base",
  "version": "1.0.0",
  "description": "The basic typescript project setup for DotMH",
  "main": "index.js",
  "type": "module",
  "prettier": "@dotmh/prettier-config",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage --run",
    "prepare": "husky",
    "build": "smart-builder",
    "build:dry-run": "SKIP_BUILD=yes smart-builder",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:check": "eslint . --fix-dry-run",
    "lint:secrets": "secretlint \"**/*\"",
    "githook:prepush": "pnpm run lint:secrets && pnpm run lint:check && pnpm run format:check && pnpm run test",
    "githook:precommit": "pnpm run lint:secrets"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@dotmh/eslint-config-ts": "^3.0.1",
    "@dotmh/prettier-config": "^2.0.0",
    "@dotmh/smart-builder": "^1.2.3",
    "@dotmh/tsconfig": "^2.1.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.1",
    "@types/node": "20.17.16",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-istanbul": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "secretlint": "^9.3.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "yaml": "^2.7.1"
  },
  "engines": {
    "node": ">=20.17.0",
    "pnpm": ">=9.4.0"
  }
}
